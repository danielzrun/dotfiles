// Zed settings - Only non-default configurations
{
  "title_bar": {
    "show_branch_icon": true
  },
  "auto_update": false,
  "vim_mode": true,
  "vim": {
    "use_system_clipboard": "on_yank",
    "toggle_relative_line_numbers": true
  },
  "terminal": {
    "font_family": "Lilex Nerd Font Mono",
    "font_size": 16,
    "font_fallbacks": [
      "PingFang SC"
    ]
  },
  "theme": {
    "mode": "dark",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "ui_font_size": 16,
  "ui_font_fallbacks": [
    "Lilex Nerd Font",
    "PingFang SC"
  ],
  "buffer_font_size": 16,
  "buffer_font_family": ".ZedMono",
  "buffer_font_fallbacks": [
    "Lilex Nerd Font",
    "PingFang SC"
  ],
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "tabs": {
    "file_icons": true
  },
  "prettier": {
    "allowed": false
  }
}
