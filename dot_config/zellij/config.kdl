// ====================================================================
// Zellij Configuration - Optimized for Ghostty + LazyVim workflow
// ====================================================================

// Core Settings
theme "catppuccin-mocha"           // Color scheme matching Ghostty/LazyVim
copy_command "pbcopy"              // macOS clipboard integration
default_layout "default"           // Use clean layout (no status bar, better for Neovim)
attach_to_session true             // Auto-attach to existing session
pane_frames false                  // Hide frames by default
show_tips false                    // Disable startup tips
show_release_notes false           // Disable release notes

themes {
    catppuccin-mocha {
        bg "#1e1e2e"
        fg "#cdd6f4"
        red "#f38ba8"
        green "#a6e22e"
        yellow "#f9e2af"
        blue "#89b4fa"
        magenta "#cba6f7"
        cyan "#89dceb"
        orange "#fab387"
        black "#181825"
        white "#bac2de"
    }
}

// Keybindings
keybinds {
    // Alt+1 through Alt+9 for quick tab switching in normal and locked modes
    shared_except "pane" "resize" "move" "scroll" "session" {
        bind "Alt 1" { GoToTab 1; }
        bind "Alt 2" { GoToTab 2; }
        bind "Alt 3" { GoToTab 3; }
        bind "Alt 4" { GoToTab 4; }
        bind "Alt 5" { GoToTab 5; }
        bind "Alt 6" { GoToTab 6; }
        bind "Alt 7" { GoToTab 7; }
        bind "Alt 8" { GoToTab 8; }
        bind "Alt 9" { GoToTab 9; }
    }
}
