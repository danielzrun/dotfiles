#!/usr/bin/env bash
# =============================================================================
# Install Yazi Plugins and Themes
# =============================================================================
# This script runs once to install Yazi flavors (themes)
# hash: {{ include "dot_config/yazi/theme.toml" | sha256sum }}

set -euo pipefail

echo "üé® Installing Yazi flavors and plugins..."

# Install catppuccin-mocha flavor
if command -v ya &> /dev/null; then
    echo "Installing Catppuccin Mocha theme......"
    ya pkg add yazi-rs/flavors:catppuccin-mocha || true
    echo "‚úì Yazi themes installed"
else
    echo "‚ö†Ô∏è  'ya' command not found. Install yazi first."
    exit 0
fi

echo "‚úì Yazi setup complete!"
